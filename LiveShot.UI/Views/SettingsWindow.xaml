<Window x:Class="LiveShot.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <CheckBox Name="StartWithWindowsCheckBox" Content="Start with Windows" Margin="0,0,0,15"/>

        <DockPanel Margin="0,0,0,15">
            <Label Content="Capture Hotkey:" DockPanel.Dock="Left"/>
            <Button Name="HotkeyButton" Content="F9" Click="HotkeyButton_Click" Width="100" HorizontalAlignment="Right"/>
        </DockPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="SaveButton" Content="Save" Width="80" Click="SaveButton_Click" Margin="0,0,10,0"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
